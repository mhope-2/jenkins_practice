pipeline{
    agent any

    stages {

            // can have checkout stage here

            stage("build"){
                steps {
                    echo 'building the application'
                }
            }

            stage("test"){
                steps {
                    echo 'testing the application'
                }
            }

            stage("deploy"){
                steps {
                    echo 'deploying the application'
                }
            }

            // can have clean-up stage here

      }
}